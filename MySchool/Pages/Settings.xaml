<Page x:Class="MySchool.Pages.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MySchool.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="536" d:DesignWidth="928"
      Title="Settings"
      Background="{DynamicResource Brush.Background}">

    <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
        <StackPanel Margin="24" Orientation="Vertical">
            <TextBlock Text="Settings" Style="{StaticResource Text.Headline}" Margin="0,0,0,12"/>

            <Border Style="{StaticResource Card}" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Style="{StaticResource Text.Title}" Text="Appearance" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <CheckBox x:Name="DarkModeToggle" VerticalAlignment="Center" IsChecked="False" Checked="DarkModeToggle_Checked" Unchecked="DarkModeToggle_Unchecked"/>
                        <TextBlock Text="Enable dark mode" Style="{StaticResource Text.Body}" Margin="8,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource Card}" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Style="{StaticResource Text.Title}" Text="Timetable" Margin="0,0,0,5"/>
                    <TextBlock Style="{StaticResource Text.Body}" Text="Upload your school timetable using an AI assistant (ChatGPT, Claude, etc.)" Margin="0,0,0,8"/>
                    <Button x:Name="UploadTimetableButton" 
                            Style="{StaticResource Button.Primary}" 
                            Content="Upload Timetable" 
                            Padding="16,8"
                            HorizontalAlignment="Left"
                            Click="UploadTimetableButton_Click"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource Card}" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Style="{StaticResource Text.Title}" Text="Weather Location" Margin="0,0,0,5"/>
                    <TextBlock Style="{StaticResource Text.Body}" Text="Configure location for weekend weather display" Margin="0,0,0,8"/>
                    
                    <TextBlock x:Name="CurrentLocationText" 
                               Style="{StaticResource Text.Body}" 
                               Text="Using device location" 
                               Margin="0,0,0,8"
                               FontWeight="SemiBold"/>
                    
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="RequestLocationButton" 
                                Style="{StaticResource Button.Primary}" 
                                Content="Request Location Permission" 
                                Padding="16,8"
                                Margin="0,0,8,0"
                                Click="RequestLocationButton_Click"/>
                        <Button x:Name="ManualLocationButton" 
                                Style="{StaticResource Button.Secondary}" 
                                Content="Set Manual Location" 
                                Padding="16,8"
                                Click="ManualLocationButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource Card}" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Style="{StaticResource Text.Title}" Text="Developer Mode" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
                        <CheckBox x:Name="DeveloperModeToggle" VerticalAlignment="Center" IsChecked="False" Checked="DeveloperModeToggle_Checked" Unchecked="DeveloperModeToggle_Unchecked"/>
                        <TextBlock Text="Enable developer mode" Style="{StaticResource Text.Body}" Margin="8,0,0,0"/>
                    </StackPanel>

                    <!-- Developer Settings (collapsed by default) -->
                    <StackPanel x:Name="DeveloperSettings" Visibility="Collapsed">
                        <Separator Margin="0,0,0,12" Background="{DynamicResource Brush.Border}"/>
                        
                        <!-- Layout Mode Override -->
                        <TextBlock Style="{StaticResource Text.Body}" FontWeight="SemiBold" Text="Layout Mode Override" Margin="0,0,0,8"/>
                        <ComboBox x:Name="LayoutModeComboBox" 
                                  Margin="0,0,0,12"
                                  SelectionChanged="LayoutModeComboBox_SelectionChanged">
                            <ComboBoxItem Content="Auto (Default)" Tag="Auto" IsSelected="True"/>
                            <ComboBoxItem Content="Force Weekend Mode" Tag="Weekend"/>
                            <ComboBoxItem Content="Force Weekday Mode" Tag="Weekday"/>
                        </ComboBox>

                        <!-- Force Weather Settings -->
                        <TextBlock Style="{StaticResource Text.Body}" FontWeight="SemiBold" Text="Weather Override" Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
                            <CheckBox x:Name="ForceWeatherToggle" VerticalAlignment="Center" IsChecked="False" Checked="ForceWeatherToggle_Checked" Unchecked="ForceWeatherToggle_Unchecked"/>
                            <TextBlock Text="Use custom weather data" Style="{StaticResource Text.Body}" Margin="8,0,0,0"/>
                        </StackPanel>

                        <StackPanel x:Name="WeatherOverrideSettings" Visibility="Collapsed" Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Style="{StaticResource Text.Body}" Text="Condition" Margin="0,0,0,4"/>
                                    <ComboBox x:Name="WeatherConditionComboBox" SelectionChanged="WeatherConditionComboBox_SelectionChanged">
                                        <ComboBoxItem Content="Clear" Tag="Clear" IsSelected="True"/>
                                        <ComboBoxItem Content="Clouds" Tag="Clouds"/>
                                        <ComboBoxItem Content="Rain" Tag="Rain"/>
                                        <ComboBoxItem Content="Drizzle" Tag="Drizzle"/>
                                        <ComboBoxItem Content="Snow" Tag="Snow"/>
                                        <ComboBoxItem Content="Thunderstorm" Tag="Thunderstorm"/>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Style="{StaticResource Text.Body}" Text="Temperature (°C)" Margin="0,0,0,4"/>
                                    <TextBox x:Name="TemperatureTextBox" Text="23" TextChanged="TemperatureTextBox_TextChanged"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock Style="{StaticResource Text.Body}" Text="Description" Margin="0,8,0,4"/>
                            <TextBox x:Name="WeatherDescriptionTextBox" Text="Clear sky" TextChanged="WeatherDescriptionTextBox_TextChanged"/>

                            <TextBlock Style="{StaticResource Text.Body}" Text="Location Name" Margin="0,8,0,4"/>
                            <TextBox x:Name="LocationNameTextBox" Text="Test Location" TextChanged="LocationNameTextBox_TextChanged"/>
                        </StackPanel>

                        <!-- Utility Buttons -->
                        <TextBlock Style="{StaticResource Text.Body}" FontWeight="SemiBold" Text="Utilities" Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Button x:Name="OpenConfigButton" 
                                    Style="{StaticResource Button.Secondary}" 
                                    Content="Open Config File" 
                                    Padding="16,8"
                                    Margin="0,0,8,0"
                                    Click="OpenConfigButton_Click"/>
                            <Button x:Name="OpenDataFolderButton" 
                                    Style="{StaticResource Button.Secondary}" 
                                    Content="Open Data Folder" 
                                    Padding="16,8"
                                    Click="OpenDataFolderButton_Click"/>
                        </StackPanel>

                        <!-- Save/Reset Buttons -->
                        <Separator Margin="0,0,0,12" Background="{DynamicResource Brush.Border}"/>
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="SaveDeveloperSettingsButton" 
                                    Style="{StaticResource Button.Primary}" 
                                    Content="Save Developer Settings" 
                                    Padding="16,8"
                                    Margin="0,0,8,0"
                                    Click="SaveDeveloperSettingsButton_Click"/>
                            <Button x:Name="ResetDeveloperSettingsButton" 
                                    Style="{StaticResource Button.Secondary}" 
                                    Content="Reset to Defaults" 
                                    Padding="16,8"
                                    Click="ResetDeveloperSettingsButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
