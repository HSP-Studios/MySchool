<Page x:Class="MySchool.Pages.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MySchool.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="536" d:DesignWidth="928"
      Title="Settings"
      Background="{DynamicResource Brush.Background}">

    <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
        <StackPanel Margin="24" Orientation="Vertical">
            <TextBlock Text="Settings" Style="{StaticResource Text.Headline}" Margin="0,0,0,12"/>

            <Border Style="{StaticResource Card}" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Style="{StaticResource Text.Title}" Text="Appearance" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <CheckBox x:Name="DarkModeToggle" VerticalAlignment="Center" IsChecked="False" Checked="DarkModeToggle_Checked" Unchecked="DarkModeToggle_Unchecked"/>
                        <TextBlock Text="Enable dark mode" Style="{StaticResource Text.Body}" Margin="8,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource Card}" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Style="{StaticResource Text.Title}" Text="Timetable" Margin="0,0,0,5"/>
                    <TextBlock Style="{StaticResource Text.Body}" Text="Upload your school timetable using an AI assistant (ChatGPT, Claude, etc.)" Margin="0,0,0,8"/>
                    <Button x:Name="UploadTimetableButton" 
                            Style="{StaticResource Button.Primary}" 
                            Content="Upload Timetable" 
                            Padding="16,8"
                            HorizontalAlignment="Left"
                            Click="UploadTimetableButton_Click"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource Card}" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Style="{StaticResource Text.Title}" Text="Weather Location" Margin="0,0,0,5"/>
                    <TextBlock Style="{StaticResource Text.Body}" Text="Configure location for weekend weather display" Margin="0,0,0,8"/>
                    
                    <TextBlock x:Name="CurrentLocationText" 
                               Style="{StaticResource Text.Body}" 
                               Text="Using device location" 
                               Margin="0,0,0,8"
                               FontWeight="SemiBold"/>
                    
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="RequestLocationButton" 
                                Style="{StaticResource Button.Primary}" 
                                Content="Request Location Permission" 
                                Padding="16,8"
                                Margin="0,0,8,0"
                                Click="RequestLocationButton_Click"/>
                        <Button x:Name="ManualLocationButton" 
                                Style="{StaticResource Button.Secondary}" 
                                Content="Set Manual Location" 
                                Padding="16,8"
                                Click="ManualLocationButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource Card}" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Style="{StaticResource Text.Title}" Text="Developer" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
                        <CheckBox x:Name="DeveloperModeToggle" VerticalAlignment="Center" IsChecked="False" Checked="DeveloperModeToggle_Checked" Unchecked="DeveloperModeToggle_Unchecked"/>
                        <TextBlock Text="Enable developer mode" Style="{StaticResource Text.Body}" Margin="8,0,0,0"/>
                    </StackPanel>

                    <!-- Developer Mode Options -->
                    <StackPanel x:Name="DeveloperOptionsPanel" Visibility="Collapsed">
                        <Separator Margin="0,8,0,12" Background="{DynamicResource Brush.Border}"/>
                        
                        <!-- Force Day & Time -->
                        <TextBlock Style="{StaticResource Text.Title}" Text="Force Day &amp; Time" Margin="0,0,0,5" FontSize="14"/>
                        <TextBlock Style="{StaticResource Text.Body}" Text="Override current date and time (affects home view and weather)" Margin="0,0,0,8" Opacity="0.8"/>
                        
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
                            <CheckBox x:Name="ForceDayTimeToggle" VerticalAlignment="Center" IsChecked="False" Checked="ForceDayTimeToggle_Checked" Unchecked="ForceDayTimeToggle_Unchecked"/>
                            <TextBlock Text="Enable forced day/time" Style="{StaticResource Text.Body}" Margin="8,0,0,0"/>
                        </StackPanel>

                        <StackPanel x:Name="ForceDayTimePanel" Visibility="Collapsed" Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Day of Week" Style="{StaticResource Text.Body}" Margin="0,0,0,4" FontWeight="SemiBold"/>
                                    <ComboBox x:Name="DayOfWeekComboBox" SelectionChanged="DayOfWeekComboBox_SelectionChanged">
                                        <ComboBoxItem Content="Monday" Tag="Monday"/>
                                        <ComboBoxItem Content="Tuesday" Tag="Tuesday"/>
                                        <ComboBoxItem Content="Wednesday" Tag="Wednesday"/>
                                        <ComboBoxItem Content="Thursday" Tag="Thursday"/>
                                        <ComboBoxItem Content="Friday" Tag="Friday"/>
                                        <ComboBoxItem Content="Saturday" Tag="Saturday"/>
                                        <ComboBoxItem Content="Sunday" Tag="Sunday"/>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Time of Day (24h)" Style="{StaticResource Text.Body}" Margin="0,0,0,4" FontWeight="SemiBold"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="HourTextBox" Grid.Column="0" Text="12" MaxLength="2" TextChanged="TimeTextBox_TextChanged"/>
                                        <TextBlock Grid.Column="1" Text=":" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="4,0"/>
                                        <TextBox x:Name="MinuteTextBox" Grid.Column="2" Text="00" MaxLength="2" TextChanged="TimeTextBox_TextChanged"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- Quick Actions -->
                        <TextBlock Style="{StaticResource Text.Title}" Text="Quick Actions" Margin="0,0,0,8" FontSize="14"/>
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="OpenConfigButton" 
                                    Style="{StaticResource Button.Secondary}" 
                                    Content="Open Config File" 
                                    Padding="16,8"
                                    Margin="0,0,8,0"
                                    Click="OpenConfigButton_Click"/>
                            <Button x:Name="OpenDataFolderButton" 
                                    Style="{StaticResource Button.Secondary}" 
                                    Content="Open Data Folder" 
                                    Padding="16,8"
                                    Click="OpenDataFolderButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
