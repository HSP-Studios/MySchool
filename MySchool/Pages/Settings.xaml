<Page x:Class="MySchool.Pages.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MySchool.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Settings">

    <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
        <Grid Margin="24">
            <TextBlock Text="Settings" Style="{StaticResource Text.Headline}"/>
            <TextBlock Text="Configure your app preferences here." Style="{StaticResource Text.Body}" Margin="0,5,0,0"/>
        </Grid>
    </ScrollViewer>
</Page>
