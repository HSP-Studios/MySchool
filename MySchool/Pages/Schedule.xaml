<Page x:Class="MySchool.Pages.Schedule"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MySchool.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="536" d:DesignWidth="928"
      Title="Schedule"
      Background="{DynamicResource Brush.Background}">

    <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
        <StackPanel Margin="24">
            <TextBlock Text="Schedule" Style="{StaticResource Text.Headline}"/>
            <TextBlock Text="Your classes and events will appear here." Style="{StaticResource Text.Body}" Margin="0,5,0,0"/>
        </StackPanel>
    </ScrollViewer>
</Page>
